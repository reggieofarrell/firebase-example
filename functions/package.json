{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "rm -rf build && tsc && tsc-alias && npm run copy-email-templates",
    "build:watch": "rm -rf build && npm run copy-email-templates && concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon -w ./src/lib/email-templates -e html --exec 'npm run copy-email-templates'\" ",
    "copy-email-templates": "copyfiles -u 1 \"./src/lib/email-templates/**/*.html\" build",
    "emulate": "npm run build:watch | GOOGLE_APPLICATION_CREDENTIALS=service-account.json firebase emulators:start",
    "emulate:import": "npm run build:watch | GOOGLE_APPLICATION_CREDENTIALS=service-account.json firebase emulators:start --import ./emulator-data",
    "emulate:persist": "npm run build:watch | GOOGLE_APPLICATION_CREDENTIALS=service-account.json firebase emulators:start --import ./emulator-data --export-on-exit",
    "emulate:functions": "npm run build:watch | GOOGLE_APPLICATION_CREDENTIALS=service-account.json firebase emulators:start --only functions,hosting,pubsub",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "format": "npx prettier --write ."
  },
  "engines": {
    "node": "18"
  },
  "main": "build/index.js",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.438.0",
    "@aws-sdk/client-s3": "^3.438.0",
    "@aws-sdk/client-ses": "^3.438.0",
    "@google-cloud/pubsub": "^4.0.6",
    "@sentry/node": "^7.76.0",
    "@supercharge/promise-pool": "^3.1.0",
    "agentkeepalive": "^4.5.0",
    "axios": "^1.6.0",
    "axios-retry": "^3.8.1",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "import": "^0.0.6",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "pg": "^8.11.3",
    "posthog-node": "^3.1.3",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "unique-names-generator": "^4.7.1",
    "util": "^0.12.5",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/mustache": "^4.2.4",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsc-alias": "^1.8.8",
    "typescript": "^4.9.0"
  },
  "private": true
}
